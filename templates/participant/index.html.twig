    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>DateParticipation</th>
                <th>Description</th>
                <th>Nom Evenement</th>
                <th>Email user</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for participant in participants %}
            <tr>
                <td>{{ participant.id }}</td>
                <td>{{ participant.dateParticipation ? participant.dateParticipation|date('Y-m-d H:i') : '' }}</td>
                <td>{{ participant.description }}</td>
                <td>{{ participant.Evenement }}</td>
                <td>{{ participant.User }}</td>
                <td>
                    <a href="{{ path('app_participant_show', {'id': participant.id})  }} " class="btn btn-primary">show</a>
                    <a href="{{ path('app_participant_edit', {'id': participant.id}) }}" class="btn btn-primary">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
