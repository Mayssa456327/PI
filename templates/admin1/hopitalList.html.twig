{% extends 'base3.html.twig' %}
{% block body %}
<style>
    .hopitals-table {
        margin-top: 100px;
        margin-left: 50px;
        width: 100%;
        border-collapse: collapse;
    }

    .hopitals-table th,
    .hopitals-table td {
        padding: 10px;
        border-bottom: 1px solid #ddd;
    }

    .hopitals-table th {
        background-color: #f2f2f2;
        text-align: left;
    }

    .hopitals-table tr:hover {
        background-color: #f9f9f9;
    }
    .create-new-button-container {
        text-align: center;
        margin-top: 20px;
    }

    .create-new-button {
        padding: 10px 20px;
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 5px;
        text-decoration: none;
        transition: background-color 0.3s;
    }

    .create-new-button:hover {
        background-color: #0056b3;
    }

    /* Styles for sort dropdown and search container */
    .sort-search-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .sort-dropdown,
    .search-container {
        flex: 1;
    }

    .sort-dropdown select {
        padding: 5px;
        border-radius: 5px;
    }

    .search-container form {
        display: flex;
    }

    .search-container input[type="text"] {
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 5px 0 0 5px;
        width: 200px;
    }

    .search-container button {
        padding: 8px 15px;
        background-color: #007bff;
        color: white;
        border: 1px solid #007bff;
        border-radius: 0 5px 5px 0;
        cursor: pointer;
    }

    .search-container button:hover {
        background-color: #0056b3;
    }

    /* Edit and delete button styles */
    .edit-button {
        background-color: green;
        color: white;
        padding: 5px 10px;
        border-radius: 5px;
        text-decoration: none;
        margin-right: 5px;
    }

    .delete-button {
        background-color: red;
        color: white;
        padding: 5px 10px;
        border-radius: 5px;
        text-decoration: none;
        margin-right: 5px;
    }
</style>

<div class="sort-search-container">
    <div class="sort-dropdown">
        Trier par :
        <select onchange="location = this.value;">
            <option>Choisir un critère</option>
            <option value="{{ path('list_trie', {'sort_by': 'nom'}) }}">Nom</option>
            <option value="{{ path('app_hopital_index', {'sort_by': 'nombreChambre'}) }}">Nombre de chambres</option>
        </select>
    </div>

    <div class="search-container">
        <form action="{{ path('cherche_nom') }}" method="GET">
            <input type="text" name="search" placeholder="Rechercher par nom...">
            <button type="submit">Rechercher</button>
        </form>
    </div>
</div>

<table class="hopitals-table">
    <thead>
        <tr>
            <th>Nom</th>
            <th>Adresse</th>
            <th>Téléphone</th>
            <th>Email</th>
            <th>Nombre de chambres</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        {% for hopital in hopitals %}
        <tr>
            <td>{{ hopital.Nom }}</td>
            <td>{{ hopital.Adresse }}</td>
            <td>{{ hopital.Telephone }}</td>
            <td>{{ hopital.Email }}</td>
            <td>{{ hopital.NombreChambre }}</td>
            <td>
                <a href="{{ path('app_hopital_edit', {'id': hopital.id}) }}" class="edit-button">Éditer</a>
                <a href="{{ path('app_hopital_delete', {'id': hopital.id}) }}" onclick="return confirm('Are you sure you want to delete this hospital?')" class="delete-button">Supprimer</a>
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="5">Aucun enregistrement trouvé</td>
        </tr>
        {% endfor %}
    </tbody>
</table>
<div class="create-new-button-container">
    <a href="{{ path('app_hopital_new') }}" class="create-new-button">Ajouter un Hopital</a>
</div>
{% endblock %}
