{% extends 'base3.html.twig' %}
{% block body%}
<style>
    .hopitals-table {
        margin-top: 100px;
        margin-left: 50px;
        width: 100%;
        border-collapse: collapse;
    }

    .hopitals-table th,
    .hopitals-table td {
        padding: 10px;
        border-bottom: 1px solid #ddd;
    }

    .hopitals-table th {
        background-color: #f2f2f2;
        text-align: left;
    }

    .hopitals-table tr:hover {
        background-color: #f9f9f9;
    }
    .create-new-button-container {
        text-align: center;
        margin-top: 20px;
    }

    .create-new-button {
        padding: 10px 20px;
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 5px;
        text-decoration: none;
        transition: background-color 0.3s;
    }

    .create-new-button:hover {
        background-color: #0056b3;
    }
    /* Vos styles CSS ici */
    .edit-button {
        background-color: green;
        color: white;
        padding: 5px 10px;
        border-radius: 5px;
        text-decoration: none;
        margin-right: 5px;
    }

    .delete-button {
        background-color: red;
        color: white;
        padding: 5px 10px;
        border-radius: 5px;
        text-decoration: none;
        margin-right: 5px;
    }
     .sort-dropdown {
        margin-bottom: 10px;
    }

    .sort-dropdown select {
        padding: 5px;
        border-radius: 5px;
    }

</style>

<div class="sort-dropdown">
    Trier par :
    <select onchange="location = this.value;">
        <option>Choisir un critère</option>
        <option value="{{ path('list_trie', {'sort_by': 'nom'}) }}">Nom</option>
        <option value="{{ path('chambre_trie', {'sort_by': 'nombreChambre'}) }}">Nombre de chambres</option>
    </select>
</div>

<table class="hopitals-table">
    <thead>
        <tr>
            <th>Nom</th>
            <th>Adresse</th>
            <th>Téléphone</th>
            <th>Email</th>
            <th>Nombre de chambres</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        {% for a in hopitalByChambre %}
        <tr>
            <td>{{ a.Nom }}</td>
            <td>{{ a.Adresse }}</td>
            <td>{{ a.Telephone }}</td>
            <td>{{ a.Email }}</td>
            <td>{{ a.NombreChambre }}</td>
            <td>
                <a href="{{ path('app_hopital_edit', {'id': a.id}) }}" class="edit-button">Éditer</a>
                <a href="{{ path('app_hopital_delete', {'id': a.id}) }}" onclick="return confirm('Are you sure you want to delete this hospital?')" class="delete-button">Supprimer</a>
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="5">Aucun enregistrement trouvé</td>
        </tr>
        {% endfor %}
    </tbody>
</table>
<div class="create-new-button-container">
    <a href="{{ path('app_hopital_new') }}" class="create-new-button">Create new</a>
</div>
{% endblock %}
