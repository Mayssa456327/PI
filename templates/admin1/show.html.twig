{% extends 'base3.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ user.prenom }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ user.role }}</td>
            </tr>
            <tr>
                <th>Numerotelephone</th>
                <td>{{ user.numerotelephone }}</td>
            </tr>

            <tr>
                <th>Ville</th>
                <td>{{ user.ville }}</td>
            </tr>
            <tr>
                <th>Sexe</th>
                <td>{{ user.sexe }}</td>
            </tr>
            <tr>
                <th>ProfileImage</th>
                <td>{{ user.profileImage }}</td>
            </tr>

        </tbody>
    </table>

    <div class="btn-group" role="group" aria-label="Button group">
        <a href="{{ path('app_admin1_index') }}" class="btn btn-primary">Back to List</a>
        <a href="{{ path('app_admin1_edit', {'id': user.id}) }}" class="btn btn-success">Edit</a>
        <span class="btn btn-danger">
        {{ include('admin1/_delete_form.html.twig') }}
    </span>
    </div>

    <style>
        .delete-button button {
            background-color: red;
            color: white;
            border: none;
            padding: 0.375rem 0.75rem;
            border-radius: 0.25rem;
            transition: background-color 0.3s ease;
        }

        .delete-button button:hover {
            background-color: darkred;
        }
    </style>




{% endblock %}
