{% extends 'base2.html.twig' %}

{% block body %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/signature_pad/1.5.3/signature_pad.min.js"></script>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <style>
            .btn-success {
                background-color: #28a745;
                color: #fff;
            }

            .btn-danger {
                background-color: #dc3545;
                color: #fff;
            }
        </style>
        <a href="{{ path('app_logout') }}" class="btn btn-danger ml-2">Deconnecter</a>
    </nav>

    <h1 class="text-center mt-4">List Evenement</h1>

    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <form method="post" class="forms-sample" style="margin-left: -42px">
                    <div class="form-group col-md-12" style="display: flex;">
                        <div class="form-check">
                            <label class="form-check-label" style="width: 92px;margin-left: -2px;margin-right: 10px;">
                                <input type="radio" class="form-check-input" name="optionsRadios" id="optionsRadios1" value="nomEvenement">Nom
                            </label>
                        </div>
                        <div class="form-check">
                            <label class="form-check-label" style="width: 86px;margin-left: -2px;margin-right: 10px;">
                                <input type="radio" class="form-check-input" name="optionsRadios" id="optionsRadios2" value="dateDebut">Date Debut
                            </label>
                        </div>
                        <div class="form-check">
                            <label class="form-check-label" style="width: 86px;margin-left: -2px;margin-right: 10px;">
                                <input type="radio" class="form-check-input" name="optionsRadios" id="optionsRadios3" value="lieuEvenement">Lieu
                            </label>
                        </div>
                        <button type="Submit" class="btn btn-success btn-fw" style="margin: auto;">Sort</button>
                    </div>
                </form>

                <form name="Search-method" id="Search-method" method="post" class="forms-sample" style="display: flex">
                    <div class="form-group col-md-12">
                        <label style="margin-top: 11px;margin-left: 10px;margin-right: 14px;padding-bottom: 7px;">Option Recherche</label>
                        <select name="optionsearch" class="js-example-basic-single" style="width: 200px;height: 38px; color: white; background-color: #191c24; border-radius: 4px;text-align: center;border: 2px solid #0090e7;margin-right: 15px;">
                            <option value="">Choisi un Crit√©re</option>
                            <option value="nomEvenement">Nom Evenement</option>
                            <option value="lieuEvenement">Lieu Evenement</option>
                            <option value="dateDebut">Debut Evenement</option>
                            <option value="dateFin">Fin Evenement</option>
                        </select>
                    </div>
                    <div class="form-group col-md-12">
                        <div class="input-group">
                            <input name="Search" type="text" class="form-control" placeholder="Search Events" aria-label="Recipient's username" aria-describedby="basic-addon2">
                            <div class="input-group-append">
                                <button class="btn btn-sm btn-primary" type="Submit">Search</button>
                            </div>
                        </div>
                    </div>
                </form>

                <a href="{{ path('app_evenement_new') }}" class="btn btn-primary">Create new</a>
                <p><a href="{{ path('generator_service') }}" class="btn btn-primary px-5 py-1">PDF</a></p>

                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>ImageEvenement</th>
                            <th>TypeEvenement</th>
                            <th>NomEvenement</th>
                            <th>LieuEvenement</th>
                            <th>budget</th>
                            <th>DateDebut</th>
                            <th>DateFin</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for evenement in evenements %}
                            <tr>
                                <td>{{ evenement.id }}</td>
                                <td><img src="{{ asset('uploads/' ~evenement.imageEvenement) }}" style=" width:150px; height:150px; " alt=""/></td>
                                <td>{{ evenement.typeEvenement }}</td>
                                <td>{{ evenement.nomEvenement }}</td>
                                <td>{{ evenement.lieuEvenement }}</td>
                                <td>{{ evenement.budget }} TND</td>
                                <td>{{ evenement.dateDebut ? evenement.dateDebut|date('Y-m-d H:i') : '' }}</td>
                                <td>{{ evenement.dateFin ? evenement.dateFin|date('Y-m-d H:i') : '' }}</td>
                                <td>
                                    <a href="{{ path('app_evenement_show', {'id': evenement.id}) }}" class="btn btn-primary">show</a>
                                    <a href="{{ path('app_evenement_edit', {'id': evenement.id}) }}" class="btn btn-primary">edit</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="9">no records found</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
{% endblock %}
