
{% include 'FrontOffice/header.html.twig' %}

<style>
    .card-container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        margin-top: 100px; /* Espacement entre le header et les cartes */
        margin-left: 50px

    }

    .card {
        background-color: #f9f9f9;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 40px;
        width: calc(33.33% - 40px); /* 33.33% moins la marge de 20px sur les côtés */
        margin: 20px;
    }

    .card h2 {
        font-size: 1.5rem;
        margin-bottom: 10px;
    }

    .card p {
        margin-bottom: 5px;
    }

    .actions a {
        display: inline-block;
        margin-right: 10px;
        text-decoration: none;
        color: #007bff;
    }

    .actions a:hover {
        text-decoration: underline;
    }
</style>

   <div class="card-container">
       {% for hopital in hopitals %}
        <a href="{{ path('app_reservation_new', {'hopitalId': hopital.id}) }}" class="card">
            <h2>{{ hopital.Nom }}</h2>
            <p><strong>Adresse:</strong> {{ hopital.Adresse }}</p>
            <p><strong>Téléphone:</strong> {{ hopital.Telephone }}</p>
            <p><strong>Email:</strong> {{ hopital.Email }}</p>
            <p><strong>Nombre de chambres:</strong> {{ hopital.NombreChambre }}</p>
        </a>
    {% else %}
        <p>Aucun enregistrement trouvé</p>
    {% endfor %}
   <!--  <a href="{{ path('app_hopital_new') }}">Create new</a> -->
</div>

    

