{% block title %}Reservation{% endblock %}

{% block body %}
    <style>
        .container {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
}

.form-container {
    width: 50%;
    padding: 20px;
    background-color: #f9f9f9;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    text-align: center;
}

.table {
    width: 100%;
    margin-bottom: 20px;
}

.table th,
.table td {
    padding: 8px;
    border-bottom: 1px solid #ddd;
}

.button-container {
    display: flex;
    justify-content: center;
}

.button-container .btn {
    margin: 0 10px;
}

    </style>
    {% include 'FrontOffice/header.html.twig' %}
    <div class="container">
        <div class="form-container">
            <h1>Reservation </h1>

            <form action="{{ path('reservation.pdf', {'id': reservation.id}) }}" method="get">
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ reservation.id }}</td>
                        </tr>
                        <tr>
                            <th>NomPatient</th>
                            <td>{{ reservation.nomPatient }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ reservation.email }}</td>
                        </tr>
                        <tr>
                            <th>Téléphone</th>
                            <td>{{ reservation.telephone }}</td>
                        </tr>
                        <tr>
                            <th>DateDebut</th>
                            <td>{{ reservation.dateDebut ? reservation.dateDebut|date('Y-m-d') : '' }}</td>
                        </tr>
                        <tr>
                            <th>DateFin</th>
                            <td>{{ reservation.dateFin ? reservation.dateFin|date('Y-m-d') : '' }}</td>
                         </tr>
                         <tr>
                            <th>QR Code</th>
                            <td><img src="{{ qrCode }}" alt="QR Code"></td>
                         </tr>
                    </tbody>
                </table>
                <button type="submit" class="btn btn-primary">Télécharger</button>
            </form>
        </div>
