{% extends 'base5.html.twig' %}

{% block body %}

     <style>
        .service-item {
            border: 1px solid #ddd;
            padding: 15px;
            margin-bottom: 20px;
            border-radius: 5px;
        }

        .service-item img {
            max-width: 100%;
            height: auto;
            border-radius: 5px;
        }

        h2 {
            color: #333;
        }

        p {
            margin-bottom: 10px;
        }

        .btn {
            margin-top: 10px;
        }

        /* Custom CSS to ensure events are displayed side by side */
        .row {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
        }

        .col-lg-4,
        .col-md-6 {
            flex: 0 0 calc(33.3333% - 20px); /* Adjust as needed */
            margin-bottom: 20px;
        }

        @media (max-width: 767px) {
            .col-lg-4,
            .col-md-6 {
                flex: 0 0 calc(50% - 20px); /* Adjust as needed for smaller screens */
            }
        }
    </style>

    </style>
    <div class ="container">
            <div class="section-header text-center">
                <div id="google_translate_element"></div>
                <h1 style="margin-top:50px; margin-bottom:50px;">Liste des Evenements</h1>
                
            </div>
            <div class="row">
                {% for evenement in evenements %}
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="service-item">
                            <img src="{{ asset('uploads/' ~ evenement.imageEvenement)}}" style="width:360px; height:250px;" alt="">
                            <center><h2>{{ evenement.nomEvenement }}</h2></center>
                            <p><strong style="color:#696969">Type:</strong> {{ evenement.typeEvenement }}</p>
                            <p><strong style="color:#696969">Lieu:</strong> {{ evenement.lieuEvenement }}</p>
                            <p><strong style="color:#696969">Date de d√©but:</strong> {{ evenement.dateDebut ? evenement.dateDebut|date('Y-m-d') : '' }}</p>
                            <p><strong style="color:#696969">Date de fin:</strong> {{ evenement.dateFin ? evenement.dateFin|date('Y-m-d') : '' }}</p>
                            <a href="{{ path('app_evenement_showF', {'id': evenement.id}) }}" class="btn btn-primary">show</a>
                            <a href="{{ path('app_evenement_map', {'id': evenement.id}) }}" class="btn btn-info rounded-pill m-2" ><i class="fas fa-location-arrow"></i></a>
                            <br> <br><br> <br>
                            
                             <div class="sharethis-inline-share-buttons"></div>
                            <br>
                            <br>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
    </div>
    <br>
    <center>
        <div class="btn px-10 py-10">
            {{ knp_pagination_render(evenements) }}
        </div>
    </center>
