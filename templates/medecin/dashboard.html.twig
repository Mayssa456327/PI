{% extends 'base5.html.twig' %}

{% block title %}Tableau de bord patient{% endblock %}

{% block body %}
  <h1>Hello Docteur {{ user.nom }}!</h1>

  {% block styles %}
    <style>
      .profile-image-container {
        position: fixed;
        top: 0;
        right: 0;
        margin: 10px;
        width: 65px; /* Ajustez la largeur selon vos besoins */
        height: 65px; /* Ajustez la hauteur selon vos besoins */
        border-radius: 50%;
        overflow: hidden;
      }

      .profile-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }

      .default-profile-image {
        /* Styles pour une image par défaut si nécessaire */
        width: 100%;
        height: 100%;
        background-color: #f0f0f0; /* Couleur de fond par défaut */
      }

      /* Style pour le bouton de déconnexion */
      .disconnect-btn {
        position: absolute;
        top: 10px;
        right: 145px; /* Ajustez la position selon vos besoins */
        background-color: #dc3545; /* Couleur du bouton */
        color: #fff; /* Couleur du texte */
        padding: 8px 12px; /* Ajustez le rembourrage selon vos besoins */
        border: none;
        border-radius: 5px;
        text-decoration: none;
      }

      /* Style pour le bouton de profil */
      .profile-btn {
        position: absolute;
        top: 10px; /* Ajustez la position selon vos besoins */
        right:80px;
        background-color: #007bff; /* Couleur du bouton */
        color: #fff; /* Couleur du texte */
        padding: 8px 12px; /* Ajustez le rembourrage selon vos besoins */
        border: none;
        border-radius: 5px;
        text-decoration: none;
      }

    </style>
  {% endblock %}

  {% block corps %}
    {# Votre contenu existant #}
    <div class="d-flex justify-content-between">
      <a href="/logout" class="btn btn-danger disconnect-btn">Disconnect</a>
      <a href="{{ url('patient_profile') }}" class="btn btn-primary profile-btn">Profil</a>
    </div>

    <div class="profile-image-container">
      {% if user.profileImage %}
        <img src="{{ asset('uploads/profile_images/' ~ user.profileImage) }}" alt="Photo de profil" class="profile-image" />
      {% else %}
        <div class="default-profile-image"></div>
      {% endif %}
    </div>
  {% endblock %}


{% endblock %}